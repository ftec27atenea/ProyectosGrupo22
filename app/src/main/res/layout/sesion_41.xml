<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sesion_41">

    <ImageView
        android:id="@+id/ivSorpresa"
        android:layout_width="306dp"
        android:layout_height="215dp"
        android:onClick="MostarImagen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo400px" />

    <Button
        android:id="@+id/btnDetalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sorpresa"
        app:layout_constraintBottom_toTopOf="@+id/ivSorpresa"
        app:layout_constraintEnd_toEndOf="@+id/ivSorpresa"
        app:layout_constraintStart_toStartOf="@+id/ivSorpresa" />
</androidx.constraintlayout.widget.ConstraintLayout>